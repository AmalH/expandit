<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/defaultUiBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="7pt"
        android:textColor="#FFF"
        android:text="Default Expandit listview" />
    <Button
        android:id="@+id/customUiBtn0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="7pt"
        android:textColor="#FFF"
        android:text="Custom Expandit listview 1" />
    <Button
        android:id="@+id/customUiBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="7pt"
        android:textColor="#FFF"
        android:text="Custom Expandit listview 2" />
    <Button
        android:id="@+id/customUiBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="7pt"
        android:textColor="#FFF"
        android:text="Custom Expandit listview 3" />

</LinearLayout>